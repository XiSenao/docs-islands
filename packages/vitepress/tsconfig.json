{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "paths": {
      "#dep-types/*": ["./src/types/*"],
      "#shared/*": ["./src/shared/*"],
      "#utils/*": ["./utils/*"],
    },
  },
  "include": [
    "src/**/*.ts",
    "utils/**/*.ts",
    "types/**/*.ts",
    "types/**/*.d.ts",
    "tests/*.ts",
    "scripts/*.ts",
    "*.ts",
  ],
}
