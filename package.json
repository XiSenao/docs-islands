{
  "name": "docs-islands-monorepo",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0",
    "pnpm": ">=10.17.0"
  },
  "workspaces": [
    "packages/*",
    "packages/*/docs",
    "packages/*/playground",
    "packages/plugins/*",
    "docs",
    "utils"
  ],
  "homepage": "https://docs.senao.me/docs-islands",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/XiSenao/docs-islands.git"
  },
  "description": "Cross-framework Islands Architecture for documentation sites",
  "keywords": [
    "docs-islands",
    "vitepress",
    "react",
    "islands-architecture",
    "cross-framework",
    "ssr",
    "hydration",
    "frontend"
  ],
  "scripts": {
    "build": "tsx scripts/build.ts",
    "docs:dev": "sh -c 'pnpm --filter \"@docs-islands/${1:-monorepo}-docs\" docs:dev' --",
    "docs:build": "pnpm run _run docs:build && tsx scripts/merge-docs.ts",
    "docs:preview": "pnpm --filter @docs-islands/monorepo-docs docs:preview",
    "docs:link:dev": "pnpm run _run link:dev",
    "docs:link:prod": "pnpm run _run link:prod",
    "test": "concurrently --names \"test:unit,test:e2e\" --prefix-colors \"blue,orange\" --kill-others-on-fail \"pnpm run _run test:unit\" \"pnpm run _run test:e2e\"",
    "test:unit": "pnpm run _run test:unit",
    "test:e2e": "pnpm run _run test:e2e",
    "lint": "eslint . --fix --cache --concurrency auto --config ./eslint.config.mjs && pnpm -r --parallel run lint",
    "lint:packages": "pnpm -r --parallel run lint:package",
    "format": "prettier --write --cache .",
    "typecheck": "tsc --project tsconfig.base.json --noEmit && pnpm -r --parallel run typecheck",
    "release": "sh -c 'PKG=$1; shift; pnpm --filter \"@docs-islands/$PKG\" release \"$@\"' _",
    "changelog": "sh -c 'PKG=$1; shift; pnpm --filter \"@docs-islands/$PKG\" changelog \"$@\"' _",
    "changelog:preview": "sh -c 'PKG=$1; shift; pnpm --filter \"@docs-islands/$PKG\" changelog:preview \"$@\"' _",
    "clean": "pnpm run _run clean && del-cli .eslintcache node_modules",
    "_run": "sh -c 'SCRIPT=$1; shift; if [ $# -eq 0 ]; then pnpm -r --parallel --if-present run $SCRIPT; else pnpm --filter \"@docs-islands/$1\" $SCRIPT; fi' _",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky"
  },
  "dependencies": {
    "vite": "catalog:prod",
    "tinyglobby": "catalog:prod"
  },
  "//": "@playwright/test is a shared test infrastructure for E2E testing across all framework packages. Individual packages also declare it in their own package.json to maintain dependency completeness, while the root declaration ensures CI can execute playwright commands.",
  "devDependencies": {
    "@types/node": "catalog:dev",
    "eslint": "catalog:lint",
    "@docs-islands/eslint-config": "workspace:*",
    "@docs-islands/utils": "workspace:*",
    "prettier": "catalog:format",
    "prettier-plugin-organize-imports": "catalog:format",
    "typescript": "catalog:dev",
    "lint-staged": "catalog:dev",
    "vue-tsc": "catalog:dev",
    "tsx": "catalog:dev",
    "del-cli": "catalog:dev",
    "husky": "catalog:dev",
    "concurrently": "catalog:dev",
    "@playwright/test": "catalog:test"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue,mjs,cjs}": [
      "eslint --cache --fix"
    ],
    "*": [
      "prettier --write --cache --ignore-unknown"
    ]
  },
  "packageManager": "pnpm@10.17.0",
  "pnpm": {
    "//": "Vite isn't updating esbuild to 0.25.0 in v5, and since the project doesn't use esbuild dev server, this can be ignored.",
    "auditConfig": {
      "ignoreGhsas": [
        "GHSA-67mh-4wv8-2f99"
      ]
    },
    "overrides": {
      "axios@<1.12.0": ">=1.12.0"
    },
    "patchedDependencies": {
      "vite@5.4.20": "patches/vite@5.4.20.patch"
    }
  }
}
